{
  "name": "portal",
  "version": "1.0.0",
  "description": "Motion-activated WebRTC portal for spontaneous family connections",
  "private": true,
  "workspaces": [
    "server",
    "client",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "build": "npm run build --workspaces",
    "start:server": "npm run start --workspace=server",
    "start:client": "npm run start --workspace=client"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
